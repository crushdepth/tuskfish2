/**
 * Standardised wrapper for handling errors, warnings and notices.
 *
 * @copyright   Simon Wilkinson 2019+ (https://tuskfish.biz)
 * @license     https://www.gnu.org/licenses/old-licenses/gpl-2.0.en.html GNU General Public License (GPL) V2
 * @author      Simon Wilkinson <simon@isengard.biz>
 * @version     Release: 2.0
 * @since       2.2
 * @package     core
 */
trait ErrorHandler
{
    protected function userNotice(string $m): void     { \trigger_error($m, E_USER_NOTICE); }
    protected function userWarning(string $m): void    { \trigger_error($m, E_USER_WARNING); }
    protected function userDeprecated(string $m): void { \trigger_error($m, E_USER_DEPRECATED); }

    protected function userError(string $m, ?\Throwable $prev = null): never
    {
        throw new \RuntimeException($m, 0, $prev);
    }
}
